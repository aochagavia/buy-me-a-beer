@model PurchaseFormModel
@{
    ViewData["Title"] = "Buy me a beer";
}
<h1>@ViewData["Title"]</h1>

@if (Model == null)
{
    <p>Invalid beer id</p>
}
else
{
    <form asp-controller="Purchase" asp-action="PlaceOrder">
        @if (@Model.Product.Price == null)
        {
            <p>You are buying "@Model.Product.Description" for a custom price.</p>
            <label asp-for="Price"></label>
            <input class="form-control mb-2" asp-for="Price" placeholder="Price in €"/>
        }
        else
        {            
            <p>You are buying "@Model.Product.Description" for €@Model.Product.Price.</p>
        }

        <p>You may leave an optional message to enlighten future generations by filling the input fields below.</p>

        <label asp-for="Nickname"></label>
        <input class="form-control mb-2" asp-for="Nickname" placeholder="Nickname"/>

        <label asp-for="Message"></label>
        <input class="form-control mb-4" asp-for="Message" placeholder="Message"/>

        <input asp-for="Product.Id" value="@Model.Product.Id" type="hidden" />

        <button class="btn btn-primary">Buy!</button>
    </form>
}
